<%= form_for @band do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :autofocus => true, :required => true %>
  <%= f.label :yearsactive, "Years Active" %>
  <%= f.text_field :yearsactive %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :members %>
  <%= f.text_field :members, :placeholder => 'separate with comma'%>
  <%= f.label :image, "Band Photo" %>
  <%= f.url_field :image %>
  <%= f.submit %>
<% end %>
