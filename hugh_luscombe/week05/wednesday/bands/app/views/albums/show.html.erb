<h1><%= @album.title %></h1>

<%= image_tag @album.image, :alt => @album.title, :class => 'feature' %>

<ul>
  <li>
    <%= @album.title %>
  </li>
  <% if @album.band.present? %>
    <li>Band: <%= link_to @album.band.name, @album.band %></li>
  <% end %>
  <li>
    Year Released: <%= @album.year %>
  </li>

</ul>

<div class="controls">
  <%= link_to "Edit Album", edit_album_path(@album) %>
  <%= link_to "Delete Album", @album, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
